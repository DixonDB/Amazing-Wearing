<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Amazing.Vistas.MenuPrincipal.Encabezado">
    <Grid>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Frame HasShadow="False" CornerRadius="50" Padding="10">
                    <Image Source="Menu"
                           HeightRequest="25"/>
                </Frame>
                <Label Text="Wearing Amazing" HorizontalOptions="CenterAndExpand"
                       TextColor="#34344B" FontSize="25"
                       VerticalOptions="Center" FontAttributes="Bold"/>
                <Frame HasShadow="False" CornerRadius="50"
                       Padding="10">
                    <Image Source="User" HeightRequest="35"/>
                </Frame>
            </StackLayout>
            <Frame CornerRadius="50" HasShadow="False" Padding="10">
                <StackLayout Orientation="Horizontal">
                    <Image Source="https://i.ibb.co/tbZGtSV/lupa.png" HeightRequest="22"
                           Margin="5,0,0,0"/>
                    <Entry Placeholder="Buscar..." HorizontalOptions="FillAndExpand"
                           TextColor="Black" PlaceholderColor="#D1D4DF"
                           Margin="5,0,0,0"/>
                    <Frame CornerRadius="50" HasShadow="False"
                           Padding="10">
                        <Frame.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#FE87A5"
                                              Offset="0.5"/>
                                <GradientStop Color="#ED6285"
                                              Offset="0.5"/>
                            </LinearGradientBrush>
                        </Frame.Background>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Filtro" TextColor="White"
                                   FontAttributes="Bold"
                                   Margin="0,0,15,0"/>
                            <Image Source="https://i.ibb.co/SVC9XV0/filtrar.png"
                                   HeightRequest="15"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <CollectionView ItemsSource="{Binding Listacategorias}"
                            HeightRequest="140"
                            x:Name="listacategorias">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10,5">
                            <Frame  HorizontalOptions="Start"                    
                    CornerRadius="50" 
                        Padding="8"
                       HasShadow="False"
                        >
                                <Frame.Background>
                                    <LinearGradientBrush
                                        BindingContext="{Binding Source={RelativeSource AncestorType={
                                        x:Type Frame}}, Path=BindingContext}">
                                        <GradientStop Color="{Binding Color1}" Offset="0.5"/>
                                        <GradientStop Color="{Binding Color2}" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Frame.Background>
                                <StackLayout Orientation="Vertical">
                                    <Frame HasShadow="False" CornerRadius="50">
                                        <Image Source="{Binding Imagen}"
                                   HeightRequest="25"/>
                                    </Frame>
                                    <Label Text="{Binding Categoria}" 
                               FontAttributes="Bold"
                               TextColor="{Binding TextColor}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                                </StackLayout>
                            </Frame>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer  Command="{Binding Path=BindingContext.Seleccionarcommand,
                                    Source={x:Reference listacategorias}}"
                                    CommandParameter="{Binding .}"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>            
        </StackLayout>
    </Grid>
</ContentView>